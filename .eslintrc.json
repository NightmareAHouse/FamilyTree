{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/prop-types": "on",
    "react/react-in-jsx-scope": "on"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "require": "readonly"
  }
}